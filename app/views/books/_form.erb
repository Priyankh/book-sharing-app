<div class="form-horizontal">

  <%= form_for @book do |f| %>
      <% if @book.errors.any? %>
          <div class='row'>
            <div class='col-sm-2'></div>
            <div id="error_explanation" class='col-sm-5'>
              <h2><%= pluralize(@book.errors.count, "error") %> prohibited
                this post from being saved:</h2>
              <ul>
                <% @book.errors.full_messages.each do |msg| %>
                    <li class='error'><%= msg %></li>
                <% end %>
              </ul>
            </div>
          </div>
      <% end %>

      <div class='row'>
        <div class="form-group">
          <%= f.label :Title, class: 'col-sm-2 control-label' %>
          <div class='col-sm-4'>
            <%= f.text_field :title, class: 'form-control' %>
          </div>
        </div>
      </div>

      <div class='row'>
        <div class="form-group">
          <%= f.label :ISBN, class: 'col-sm-2 control-label' %>
          <div class="col-sm-4">
            <%= f.text_field :isbn, class: 'form-control' %>
          </div>
        </div>
      </div>

      <div class='row'>
        <div class="form-group">
          <%= f.label :edition, class: 'col-sm-2 control-label' %>
          <div class="col-sm-4">
            <%= f.text_field :edition, class: 'form-control' %>
          </div>
        </div>
      </div>


      <div class='row'>
        <div class="form-group">
          <%= f.label :description, class: 'col-sm-2 control-label' %>
          <div class="col-sm-4">
            <%= f.text_field :description, class: 'form-control' %>
          </div>
        </div>
      </div>

      <div class='row'>
        <div class='form-group'>
          <div class='col-sm-2'></div>
          <div class='col-sm-4'>
            <%= f.submit class: 'btn btn-primary' %>
          </div>
        </div>
      </div>

  <% end %>
</div>