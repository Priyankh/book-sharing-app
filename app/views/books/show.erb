<div class="row">
  <div class="col-lg-4">
    <img src="<%= @book.image_url %>"/>
  </div>


  <div class="col-lg-8">

    <div class="row">
      <label class="col-lg-3">Title:</label>

      <div class="col-lg-9">
        <%= @book.title %>
      </div>
    </div>

    <div class="row">
      <label class="col-lg-3">Authors:</label>

      <div class="col-lg-9">
        <%= @book.author %>
      </div>
    </div>

    <div class="row">
      <label class="col-lg-3">ISBN:</label>

      <div class="col-lg-9">
        <%= @book.isbn %>
      </div>
    </div>

    <div class="row">
      <label class="col-lg-3">Edition:</label>

      <div class="col-lg-9">
        <%= @book.edition %>
      </div>
    </div>

    <div class="row">
      <label class="col-lg-3">Description:</label>

      <div class="col-lg-9">
        <%= @book.description %>
      </div>
    </div>


    <div class="row">
      <label class="col-lg-3">Lent to:</label>
    </div>

    <table class="table">

      <tr>
        <th>Name</th>
        <th>Date of lending</th>
        <th></th>
      </tr>

      <tbody>
      <% @lenders.each do |lender| %>
          <tr>
            <td><%= lender.name %></td>
            <td><%= lender.date_of_lending %></td>
            <td><a href="#" class='edit_lender lender-form-link glyphicon glyphicon-pencil' data-id="<%= lender.id %>" data-toggle='modal'></a></td>
          </tr>
      <% end %>
      </tbody>

    </table>
  </div>
</div>

<li><a href="#" data-toggle='modal' class="add-new-lender lender-form-link">Add New Lender</a></li>


